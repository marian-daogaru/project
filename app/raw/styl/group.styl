.btn
  margin: 0.75rem 0.5rem

.img-profile
  width: 100%
  max-width: 300px
  max-height: 250px
  background-color: #e9e9e9
  border: 0
  box-shadow: 5px 5px 25px -3px #000

#mapCanvas
  min-height: 300px
  max-height: 500px
  width: 100%
  overflow: hidden
  position: relative
  display: block
  z-index: 10

.glyphicon-remove
  color: #f00

.ratingDefault
  color: #000

.ratingClicked
  color: #f2d388

.ratingButton
  appearance: none
  -webkit-appearance: none
  -moz-appearance: none
  outline: none
  border: 0
  background: transparent
  -webkit-box-shadow: 0 5px 15px rgba(0,0,0,0)
  padding: 5px
  font-size: 2em
  margin: 0



.ratingButtonGroup
  width: 100%
  left: 5px

.ratingCutlery
  font-size: 2em

label
  h3
    font-size: 2rem
  p
    font-size: 1.5rem

.suggested
  width: 100%
  h3
    font-size: 3rem
    font-weight: 700
  h4
    font-size: 2.5rem


.restaurant-thumbnail
  position: relative
  background: #e9e9e9
  min-height: auto
  height: 100%
  max-height: 650px
  display: flex
  flex-direction: column
  flex-wrap: wrap

.img-restaurant
  height: 50%
  min-height: 40%
  max-height: 400px
  width: 100%
  background: #e9e9e9
  border: 0
  box-shadow: 5px 5px 25px -3px #000


.restaurants
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-evenly
  align-content: flex-start


.restaurant-post
  max-height: 800px
  padding: 0.75rem 0.75rem
  display: block
  position: relative
  min-width: 25%

.pull-top
  align-self: flex-start

.pull-bottom
  align-self: flex-end

.left-rating
  float: left

.right-rating
  float: right
