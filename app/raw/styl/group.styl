.btn
  margin: 0.75rem 0.5rem

a
  color: #000
a:hover
    color: #000

.img-profile
  width: 100%
  max-width: 300px
  max-height: 250px
  background-color: #e9e9e9
  border: 0
  box-shadow: 5px 5px 25px -3px #000

#map-canvas
  width: calc(100% - 1rem)
  height: calc(100% - 1rem)
  margin: 0.5rem
  overflow: hidden
  position: relative
  display: block
  z-index: 10
  border-radius: 0.5rem

.glyphicon-remove
  color: #f00

.rating-default
  color: #000

.ratingClicked
  color: #f2d388

.rating-button
  appearance: none
  -webkit-appearance: none
  -moz-appearance: none
  outline: none
  border: 0
  background: transparent
  -webkit-box-shadow: 0 5px 15px rgba(0,0,0,0)
  padding: 5px
  font-size: 2em
  margin: 0

.rating-button-group
  width: 100%
  padding: 3px 5px
  .btn.btn-default
    text-shadow: 0 0px 0 #e9e9e9

.ratingCutlery
  font-size: 2em

label
  h3
    font-size: 2rem
  p
    font-size: 1.5rem

.suggested
  display: block
  max-width: 400px
  width: 100%
  height: auto
  h3
    font-size: 3rem
    font-weight: 700
  h4
    font-size: 2.5rem

.restaurant-thumbnail
  position: relative
  background: #e9e9e9
  min-height: auto
  height: 100%
  max-height: 650px
  width: 100%

.img-restaurant
  height: 50%
  min-height: 40%
  max-height: 400px
  width: 100%
  background: #e9e9e9
  border: 0
  box-shadow: 5px 5px 25px -3px #000


.restaurants
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-evenly
  align-content: flex-start


.restaurant-post
  max-height: 800px
  max-width: 400px
  padding: 0.75rem 0.75rem
  display: block
  position: relative

.flex-container
  height: 100%
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-start
  h5
    font-size: 2.5rem
  h4
    font-size: 3rem

.pull-top
  height: calc(100% - 50px)
  align-self: flex-start

.pull-bottom
  height: 50px
  align-self: flex-end
  .glyphicon
    font-size: 6vw

@media screen and (min-width: 500px)
  .pull-bottom
    .glyphicon
      font-size: 30px
    .btn
      padding: 5px 5px
@media screen and (max-width: 300px)
  .pull-bottom
    .glyphicon
      display: none

.left-rating
  float: left
  width: 20%

.right-rating
  float: right
  padding: 5px 5px
  width: 75%
  .rating-group
    float: right
    .btn
      float: left
      padding: 5px 0.5vw
