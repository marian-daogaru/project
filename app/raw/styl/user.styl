.img-thumbnail
  margin: 0
  padding: 0

.img-profile
  width: 100%
  max-width: 300px
  max-height: 250px
  background-color: #e9e9e9
  border: 0
  box-shadow: 5px 5px 25px -3px #000

.img-group
  height: 100%
  min-height: 25%
  max-height: 50%
  max-width: 100%
  background: #e9e9e9
  border: 0
  box-shadow: 5px 5px 25px -3px #000

.group-thumbnail
  position: relative
  background: #e9e9e9
  min-height: 300px
  height: 100%
  max-height: 500px

h3
  font-weight: 500

h4
  font-size: 2rem
  font-weight: 600

p
  font-size: 1.75rem

p.about-me
  font-size: 2rem

p.about-group
  height: auto
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;


.groups
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-evenly
  align-content: flex-start


.group-post
  max-height: 400px
  padding: 0.75rem 0.75rem
  display: block
  position: relative
  min-width: 25%


.button-box
  padding: 10px 5px
