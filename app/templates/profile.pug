extends base.pug 

block content
  div(id='userAPI')
    div(v-if="user")
      .container
        h1 Hello ${userLocal.nickname}
        .div(v-if='user.id !== userLocal.id')
          h3 Your are current viewing the profile of 
            strong ${user.nickname}
        .row 
          .col-lg-3.col-sm-6
            img.img-responsive.img-thumbnail(:src="user.avatar.mediaPath" width="200" height="auto")
          .col-lg-3.col-sm-6
            .row
              strong About: 
              .p ${user.aboutMe}
            .row(v-if="user.id === userLocal.id")
              .btn.btn-primary(v-on:click="redirectEdit()") Edit your profile 
              .btn.btn-primary(v-on:click="redirectCreateGroup()") Create a new group 
        .row
          .col
            .groups
              h3 Groups
              .row
              template(v-for="group in user.Group")
                .col-sm-4.col-md-3.col-xs-6
                  a(v-bind:href="/group/ + group.id")
                    div(class="thumbnail groupThumbnail")
                      img.img-responsive.img-thumbnail(v-bind:src="group.Media.mediaPath" width="200" height="auto")                    
                      div(class='caption')
                        h4 ${group.name}
                        p(v-if="group.aboutGroup !== 'None'") ${group.aboutGroup}
                      
                
block jsscript 
  script(type="text/javascript" src="{{ url_for('static', filename='js/user.js') }}")
    
                      
    
