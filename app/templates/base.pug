doctype html
html
  head
    title Rodica 2.0
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css", integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r", crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css")
    link(rel="stylesheet", href="{{ url_for('static', filename='css/base.css') }}")
    block cssscript
    //- FONTS 
    link(href="https://fonts.googleapis.com/css?family=Nova+Slim" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Gentium+Basic:400,700" rel="stylesheet")
    //- script(type='text/javascript' scr='../static/js/script.js')
    script(src="https://www.google.com/recaptcha/api.js?render=explicit" async defer)
  body
    .container
      div(id="baseAPI")
        div(v-if='User')
          nav(class='navbar navbar-default navbar-fixed-top container')
            div(class='container-fluid')
              div(class='navbar-header')
                button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                  span(class='sr-only') Toggle Navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a(class='navbar-brand' href="{{ url_for('home') }}")
                  img(alt='brand' v-bind:src='brandLocation' height="30px" width="auto")
              div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
                ul(class="nav navbar-nav navbar-left")
                  li
                    a(href="{{ url_for('home') }}") Home
                  li(v-if="User.id !== '-1'")
                    a(:href="/user/+User.id") Your Profile 
                  li(v-else)
                    a(href="{{ url_for('login') }}") Login 
                  li(v-if="User.id !== '-1'")
                    a(:href="'/user/' + User.id + '/groups'") Your Groups 
                  li(v-if="User.id !== '-1'")
                    a(href="{{ url_for('logout') }}") Logout 
                  li(v-else)
                    a(href="{{ url_for('signup') }}") Signup 
                ul(class="nav navbar-nav navbar-right")
                  li
                    div(class="navbar-form navbar-left navbar-input-group")
                      div(class="form-group")
                        input(v-model='restaurantName' v-on:keypress.enter="searchRestaurantRedirect()" type="text" class="form-control" placeholder="Search existing restaurant" name="search")
                      .btn.btn-default(v-on:click="searchRestaurantRedirect()")
                        i(class="glyphicon glyphicon-search")   
          
        | #{'{% with messages = get_flashed_messages() %} '}
        | #{'{% if messages %}'}
        | <ul>
        | #{'{% for message in messages %}'}
        |    <li>#{'{{ message }}'}</li>
        |#{'{% endfor %}'}
        </ul>
        | #{'{% endif %}'}
        | #{'{% endwith %}'}
        
      div
        block content
        
    
    //- end of body
    script(src="https://code.jquery.com/jquery-2.2.4.js", integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI=", crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js")
