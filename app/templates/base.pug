    //- script(type="text/javascript" src="{{ url_for('static', filename='js/vue-resources.min.js') }}")
    script(src="https://unpkg.com/vue")
    script(src="https://cdn.jsdelivr.net/npm/vue-resource@1.3.5")
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5KdA5p-EG13w5-L6g-IiXjMI-_9zyacc")
    script(type="text/javascript" src="{{ url_for('static', filename='js/base.js') }}")
    div 
      block jsscript 
    
