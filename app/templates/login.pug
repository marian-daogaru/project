extends base.pug 

block content
  .main.container
    h1 Login
    
    form(action='' method='POST' name='login')
      form.hidden_tag()
      div.form-group 
        label(for='email') Name:
        input#email.form-control(type='text', placeholder='email@domain.ext' name='email')
      div.form-group 
        label(for='pw') Password:
        input#pw.form-control(type='password' name='password' placeholder='*****')
      button.btn.btn-primary(type='submit') Login 
    
  
  
  
